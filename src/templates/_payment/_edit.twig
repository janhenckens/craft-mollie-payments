{% extends "_layouts/cp" %}
{% import "_includes/forms" as forms %}

{% set fullPageForm = true %}
{% set saveShortcutRedirect = continueEditingUrl ?? "" %}

{% set crumbs = [
    { label: "Payments", url: cpUrl('mollie-payments') },
    { label: form.title, url: cpUrl('mollie-payments?&source=form:' ~ form.handle) },
] %}

{% set title = "Payment for "|t('mollie-payments') ~ form.title ~' - '~ element.email %}

{% set mainFormAttributes = {
    action: actionUrl('mollie-payments/payment/save-cp'),
    method: 'post'
} %}

{% block header %}
    {{ block('pageTitle') }}
        {{ block('actionButton') }}
{% endblock %}

{% set tabData = [] %}
{% if element.getFieldLayout() %}
    {% for tab in element.getFieldLayout().getTabs() %}
        {% set data = { label: tab.name, url: '#' ~ tab.getHtmlId()} %}
        {% set tabData = tabData|merge({ (tab.id) : data}) %}
    {% endfor %}
{% endif %}

{% hook 'cp.payments.edit' %}

{% block content %}
    
    {{ hiddenInput('paymentId', element.id) }}
    {% if element.getFieldLayout() %}

        {% set form = element.getFieldLayout().createForm(element) %}
        <div id="fields">
            {{ form.render()|raw }}
        </div>
    {% endif %}

    <hr>
    <div>
        <h2>{{ "Transactions"|t }}</h2>
        {% include 'mollie-payments/_payment/_transactions.twig' with {transactions : transactions, element: element } only %}
    </div>


    {% hook 'cp.payments.edit.content' %}
{% endblock %}

{% block details %}
    <div id="settings" class="meta">
        <div class="field">
            <div class="heading">
                <label>Status</label>
            </div>
            <div class="input ltr">{{ form.title }}</div>
        </div>
        <div class="field">
            <div class="heading">
                <label>{{ "Form"|t("mollie-payments") }}</label>
            </div>
            <div class="input ltr">{{ form.title }}</div>
        </div>
        <div class="field">
            <div class="heading">
                <label>{{ "Email"|t("mollie-payments") }}</label>
            </div>
            <div class="input ltr">{{ element.email }}</div>
        </div>
        <div class="field" id="amount-field">
            <div class="heading">
                <label>{{ "Amount"|t("mollie-payments") }}</label>
            </div>
            <div class="input ltr">{{ element.amount }} {{ form.currency }}</div>
        </div>
    </div>
    {% hook 'cp.payments.edit.details' %}
{% endblock %}